<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notalia.HelpPage"
             Title="HelpPage"
             BackgroundColor="{StaticResource Background}">

    <ScrollView>
        <AbsoluteLayout
            Padding="30,0"
            Margin="0">

            <ImageButton 
              x:Name="CounterBtn"
              Source="icon.png"
              WidthRequest ="150"
              HeightRequest="150"
              AbsoluteLayout.LayoutBounds ="-75, -40" />
            <!--Clicked="OnButtonClicked"/> -->

            <Label
                Text="Help"
                FontSize="20"
                TextColor="Black"
                AbsoluteLayout.LayoutFlags="None"
                AbsoluteLayout.LayoutBounds= "30, 20, AutoSize, AutoSize" />
        </AbsoluteLayout>
    </ScrollView>
</ContentPage>
